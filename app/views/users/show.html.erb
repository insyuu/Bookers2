 <%= flash[:notice] %>






<div class="container">  <!-- この行を追加 -->
  <div class="row">
      <div class="col-md-3">

 <!-- ユーザーのプロフィール -->
 <h1>User info</h1>
 <div>
 <%= image_tag @user.get_profile_image(100,100) %>
 </div>

<table class="table">
 <tbody>
 <tr>
  <th>name</th>
  <th><%= @user.name %></th>
 </tr>
 <tr>
 <th>introduction</th>
 <th><%= @user.introduction %></th>
 </tr>
 </tbody>
 </table>
 <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary  btn-block' do%>
 <i class="fas fa-user-cog"></i>
 <% end %>


     <!-- 本を投稿する部分 -->
<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @book, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Option</h4>
  <%= f.text_area :body %>

  <div><%= f.submit 'Create Book' %></div>
<% end %>

    </div>
     <div class="col-md-8 offset-md-1">
   <!-- ユーザーの投稿一覧 -->
   <h1>Books</h1>
  <table class="table table-hover table-inverse">
    <tr>
     <th>
    </th>
    <th>
    Title
    </th>
    <th>
    Opinion
    </th>
   </tr>
   <% @books.each do |book| %>
   <tr>

   <td>

    <%= link_to user_path(book.user) do %>
    <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <% end %>
    </td>
    <td>
    <p><%= link_to book.title, book_path(book) %></p>
    </td>
    <td>
    <p><%= book.body %></p>
    </td>
  </tr>
  <% end %>
  </table>
