<div class="container">  <!-- この行を追加 -->
  <div class="row">
      <div class="col-md-3">

 <!-- ユーザーのプロフィール -->
 <h1>User info</h1>
 <div>
 <%= image_tag @user.get_profile_image(100,100) %>
 </div>

<table class="table">
 <tbody>
 <tr>
  <th>name</th>
  <th><%= @user.name %></th>
 </tr>
 <tr>
 <th>introduction</th>
 <th><%= @user.introduction %></th>
 </tr>
 </tbody>
 </table>
 <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary  btn-block' do%>
 <i class="fas fa-user-cog"></i>
 <% end %>

      <!-- 本を投稿する部分 -->
  <h1>New book</h1>
  <%= form_with model: @book, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Option</h4>
  <%= f.text_area :body %>

  <div><%= f.submit 'Create Book' %></div>
<% end %>
 </div>

     <div class="col-md-8 offset-md-1">
   <!-- ユーザーの投稿一覧 -->
   <h1>Users</h1>
  <table class="table table-hover table-inverse">
  <tr>
     <th>
     image
    </th>
    <th>
    name
    </th>
    <th>
    </th>
   </tr>
   <% @users.each do |user| %>
   <tr>

    <td>
    <p><%= image_tag user.get_profile_image(100,100) %></p>
    </td>
    <td>
    <p><%= user.name %></p>
    </td>
    <td>
    <p><%= link_to "Show", user_path(user) %></p>
    </td>
  </tr>
  <% end %>
  </table>
