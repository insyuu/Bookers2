 <% end %>

     <!-- 本を投稿する部分 -->
<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: @boook, method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Option</h4>
  <%= f.text_area :body %>

  <div><%= f.submit 'Create Book' %></div>
<% end %>
 </div>


  <div class="col-md-8 offset-md-1">
   <!-- ユーザーの投稿一覧 -->
  <h3>Book detail</h3>
  <table class="table">
   <tbody>
    <tr>
     <td>
  <%= link_to @book.user do %>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <% end %>
  <p><%= link_to @book.user.name, user_path(@book.user) %></p>
    </td>
    <td>
    <p><%= link_to @book.title, book_path(@book) %></p>
    </td>
    <td>
    <p><%= @book.body %></p>
    </td>
    <td>
      <% if @book.user == current_user %>
      <%= link_to "Edit", edit_book_path(@book) %>
    </td>
    <td>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
   <% end %>
    </td>
   </tr>
   </tbody>
   </table>

